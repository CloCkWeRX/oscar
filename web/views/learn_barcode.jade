extends layout

block content
  h2 What grocery item should I add for the barcode #{opp_data["barcode"]}?
  div(class='container')
    div(class='row')
      form(action='/submit-learn-barcode', method='post', role='form')
        input(id='barcode', type='hidden', value='#{opp_data["barcode"]}', name='barcode')
        div(class='form-group')
          textarea(id='item', class='form-control xxlarge', value='', name='item', autocapitalize='off')
        div(class='form-group')
          input(id='submit-learn-barcode', class='form-control' type='submit', value='Learn', name='submit-learn-barcode')
